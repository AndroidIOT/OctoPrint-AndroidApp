<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:widget="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_container_linear_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/printer_select_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageView"
                android:src="@drawable/icon_selectedprinter"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/content_padding_small"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="5dp"
                    android:id="@+id/printview_printer_tag"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/printview_printer_progress"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:padding="5dp"
                        android:textStyle="italic"
                        android:id="@+id/printview_printer_file"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/printview_progress_bar"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            >


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/printview_profile_tag"
                    android:id="@+id/printview_text_profile_tag"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" N/A"
                    android:id="@+id/printview_text_profile_text"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <com.material.widget.PaperButton
                android:id="@+id/printview_pause_button"
                style="@style/MaterialDesignButton.Flat"
                android:layout_width="150dp"
                widget:paper_text="@string/printview_start_button"
                widget:paper_text_color="@android:color/holo_blue_dark"/>

            <com.material.widget.PaperButton
                android:id="@+id/printview_stop_button"
                style="@style/MaterialDesignButton.Flat"
                android:layout_width="150dp"
                widget:paper_text="@string/printview_stop_button"
                widget:paper_text_color="@android:color/holo_red_dark"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

</LinearLayout>