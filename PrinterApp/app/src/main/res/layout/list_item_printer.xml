<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/content_padding_normal">

    <ImageView
        android:id="@+id/printer_icon_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_selectedprinter" />

    <LinearLayout
        android:id="@+id/text_info_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/content_margin_normal"
        android:gravity="center_vertical">

        <TextView
            style="@style/TextHeader"
            android:id="@+id/printer_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            style="@style/TextHeaderSubLight"
            android:id="@+id/printer_state_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>


</LinearLayout>