<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/detail_tv_name"
            style="@style/ModelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elemento.stl"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/content_padding_xsmall"
            android:gravity="center">

!            <ImageButton
                android:id="@+id/detail_fav_button"
                android:layout_margin="@dimen/content_padding_xsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_rect_background_gray"
                android:src="@drawable/ic_action_star_outline"/>

            <ImageButton
                android:id="@+id/detail_close_button"
                android:layout_margin="@dimen/content_padding_xsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_rect_background_gray"
                android:src="@drawable/ic_close"/>


        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/detail_iv_preview"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:padding="@dimen/content_padding_xsmall"
        android:scaleType="centerCrop" />

    <!-- Separation line -->
    <View
        style="@style/HorizontalSeparator"
        android:layout_marginBottom="@dimen/content_margin_small"
        android:layout_marginTop="@dimen/content_margin_small" />

    <ListView
        android:id="@+id/detail_lv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Separation line -->
    <View
        style="@style/HorizontalSeparator"
        android:layout_marginTop="@dimen/content_margin_xsmall"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/detail_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="@dimen/content_padding_small"
        android:text="@string/lorem_ipsum" />

</LinearLayout>