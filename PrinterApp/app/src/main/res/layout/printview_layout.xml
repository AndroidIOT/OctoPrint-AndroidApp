<?xml version="1.0" encoding="utf-8"?>
<android.app.printerapp.devices.SlidingUpPanelLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    app:anchorPoint="1"
    app:fadeColor="@android:color/transparent"
    app:collapsedPanelHeight="@dimen/slide_panel_collapsed_height"
    app:expandedPanelHeight="@dimen/slide_panel_expanded_height"
    app:shadowHeight="4dp" >

    <LinearLayout
        android:id="@+id/printview_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/content_padding_small">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1" >

            <FrameLayout
                android:id="@+id/printview_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black" >
            </FrameLayout>
            
               <TextView
                android:id="@+id/textView1"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Video Feed"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <FrameLayout
                android:id="@+id/view_gcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>
            
            <TextView
                android:id="@+id/textView2"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
                android:text="Current progress"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <FrameLayout
            android:id="@+id/storage_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/fab_radious_big"
            android:background="@color/gray_background"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:orientation="vertical">

            <include layout="@layout/printview_slider_layout" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/expand_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center">

            <ImageView
                android:id="@+id/expand_button_imageview"
                android:layout_width="@dimen/fab_diameter_big"
                android:layout_height="@dimen/fab_diameter_big"
                android:layout_gravity="center"
                android:background="@drawable/floating_action_button" />

            <CheckBox
                android:id="@+id/expand_button_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/floating_checkbox_selector" />

        </FrameLayout>
    </FrameLayout>

</android.app.printerapp.devices.SlidingUpPanelLayout>
