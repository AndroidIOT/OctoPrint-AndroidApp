<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_printer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_padding_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/grid_element_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/grid_element_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_selectedprinter" />

        <ProgressBar
            android:id="@+id/grid_element_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/grid_warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/grid_element_icon"
            android:layout_alignBottom="@+id/grid_element_icon"
            android:src="@drawable/icon_error" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/grid_element_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/content_margin_xsmall"
        android:visibility="visible"
        android:progressDrawable="@drawable/progressbar_style"/>

    <TextView
        android:id="@+id/grid_text_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/body_text_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/content_margin_xsmall"
        android:textStyle="italic"/>

</LinearLayout>
